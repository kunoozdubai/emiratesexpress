    <RelativeLayout
        android:id="@+id/staticParent"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/titleParent"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/serviceImgParent"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_bg_services" >

            <ImageView
                android:id="@+id/serviceImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/serviceTitle"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/serviceImgParent"
            android:layout_marginRight="2dp"
            android:layout_marginTop="45dp"
            android:lines="2"
            android:layout_toRightOf="@id/serviceImgParent"
            android:background="@drawable/service_title_bg"
            android:gravity="center"
            android:text="" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_below="@id/serviceImgParent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@android:color/black" >
                    </TextView>
                </RelativeLayout>
            </ScrollView>
