<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/services"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/backgourndImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/titleParent"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FF0000" >

        <Button
            android:id="@+id/backBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backbtn"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/services_screen_title"
            android:layout_toRightOf="@id/backBtn"
            android:gravity="center"
            android:maxLines="2"
            android:lines="2"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainParent"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/titleParent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="visible" >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scrollbars="none" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/block1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" >

                    <ImageView
                        android:id="@+id/thumbImg1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/service_document_clearing_en" />

                    <TextView
                        android:id="@+id/titleTxt1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg1"
                        android:text="@string/services_documents_clearing_title_en"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descTxt1"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/titleTxt1"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg1"
                        android:text="@string/services_documents_clearing_desc_en"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/block2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/block1"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/thumbImg2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/service_businessmen_en" />

                    <TextView
                        android:id="@+id/titleTxt2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg2"
                        android:text="@string/services_businessmen_title_en"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descTxt2"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/titleTxt2"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg2"
                        android:text="@string/services_businessmen_desc_en"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/block3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/block2"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/thumbImg3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/service_typing_en" />

                    <TextView
                        android:id="@+id/titleTxt3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg3"
                        android:text="@string/services_typing_title_en"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descTxt3"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/titleTxt3"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg3"
                        android:text="@string/services_typing_desc_en"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/block4"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/block3"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/thumbImg4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/service_photocopying_en" />

                    <TextView
                        android:id="@+id/titleTxt4"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg4"
                        android:text="@string/services_photocopying_title_en"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descTxt4"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/titleTxt4"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg4"
                        android:text="@string/services_photocopying_desc_en"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/block5"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/block4"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/thumbImg5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/service_translation_en" />

                    <TextView
                        android:id="@+id/titleTxt5"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg5"
                        android:text="@string/services_translation_title_en"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descTxt5"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/titleTxt5"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg5"
                        android:text="@string/services_translation_desc_en"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/block6"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/block5"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/thumbImg6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/service_vehicle_registration_en" />

                    <TextView
                        android:id="@+id/titleTxt6"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg6"
                        android:text="@string/services_vehicles_regisration_title_en"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descTxt6"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/titleTxt6"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg6"
                        android:text="@string/services_vehicles_regisration_desc_en"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/block7"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/block6"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/thumbImg7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/service_car_embarkation_en" />

                    <TextView
                        android:id="@+id/titleTxt7"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg7"
                        android:text="@string/services_car_embarkation_title_en"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descTxt7"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/titleTxt7"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/thumbImg7"
                        android:text="@string/services_car_embarkation_desc_en"
                        android:textColor="@android:color/black" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/staticParent"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@id/titleParent"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/serviceImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/serviceImg"
            android:layout_centerHorizontal="true" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@android:color/black" >
                    </TextView>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>