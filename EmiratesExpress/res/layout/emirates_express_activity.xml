<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emirates_express_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/backgourndImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         />

    <RelativeLayout
        android:id="@+id/titleParent"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FF0000" >
        
        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_screen_title"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@android:color/white" />

        
    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/mainParent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/aboutBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/about"
            android:layout_marginTop="5dp"
            />
        
        
        
        <Button
            android:id="@+id/servicesBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/services"
            android:layout_marginTop="5dp"
            android:layout_below="@id/aboutBtn"
            />
        
        
        <Button
            android:id="@+id/howToBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/howto"
            android:layout_marginTop="5dp"
            android:layout_below="@id/servicesBtn"
            />
        
        
        <Button
            android:id="@+id/loginRegisterBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_register"
            android:layout_marginTop="5dp"
            android:layout_below="@id/howToBtn"
            />
        
        <Button
            android:id="@+id/contactUsBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/contactus"
            android:layout_marginTop="5dp"
            android:layout_below="@id/loginRegisterBtn"
            />
        
        
    </RelativeLayout>


</RelativeLayout>